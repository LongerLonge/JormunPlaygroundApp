<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".glidetest.GlideTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_bind_appcontext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="bindAppContext"
            android:text="绑定ApplicationContext" />

        <Button
            android:id="@+id/btn_bind_context"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="bindNewContext"
            android:text="绑定新版Context" />

        <Button
            android:id="@+id/btn_bind_fragment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="jumpFragmentBind"
            android:text="前往旧版Fragment绑定测试" />

        <Button
            android:id="@+id/btn_show_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="loadImage"
            android:text="直接显示图片" />

        <ImageView
            android:id="@+id/iv_haha"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>


</ScrollView>